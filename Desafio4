public class Desafio4 : MonoBehaviour
{
    public int lado1;
    public int lado2;
    public int lado3;
    void Start()
    {
      if(lado1 == lado2 || lado1 == lado3)
        {
            if(lado2 == lado3)
            {
                Debug.Log("Seu triângulo é equilatero");
            }
            else
            {
                Debug.Log("Seu triângulo é isósceles");
            }
        }else if(lado2 == lado3)
        {
            if(lado3 == lado1)
            {
                Debug.Log("Seu triângulo é equilatero");
            }
            else
            {
                Debug.Log("Seu triângulo é isósceles");
            }
        }
        else
        {
            Debug.Log("Seu triângulo é escaleno");
        }
        
