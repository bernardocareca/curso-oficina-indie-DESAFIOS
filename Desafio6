public class Desafio6 : MonoBehaviour
{
   bool MaiorQueMil(int x, int y, int z)
    {
        int total = (x+y)*z;

        if(total >= 1000)
        {
            return true;
        }
        else
        {
          return false;
        }
    }
    void Start()
    {
        Debug.Log(MaiorQueMil(182, 5, 8));
    }

    // Update is called once per frame
    void Update()
    {
        
    }
}
